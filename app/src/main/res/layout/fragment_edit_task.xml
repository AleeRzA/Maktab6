<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:minHeight="450dp"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".controller.EditTaskFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            style="?android:listSeparatorTextViewStyle"/>

        <TextView
            android:id="@+id/editFrag_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            style="?android:listSeparatorTextViewStyle"/>

        <TextView
            android:id="@+id/editFrag_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginRight="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date:"
            style="?android:listSeparatorTextViewStyle"/>

        <TextView
            android:id="@+id/editFrag_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="8dp"
            android:hint="2019-10-23"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time:"
            style="?android:listSeparatorTextViewStyle"/>

        <TextView
            android:id="@+id/editFrag_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="8dp"
            android:hint="12:45 pm"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:id="@+id/editFrag_btn_ok"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="16dp"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OK_btn"/>
        <Button
            android:id="@+id/editFrag_btn_edit"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_btn"/>

        </RelativeLayout>
    </LinearLayout>

